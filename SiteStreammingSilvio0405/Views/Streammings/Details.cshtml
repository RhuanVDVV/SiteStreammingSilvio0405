        <div class="play-video">
            @if (@Model.Tipo == ".mp4")
            {

                <video class="video" controls>


                    <source class=thumbnail src="~/arq/@Model.Titulo" type="video/mp4">
                    Your browser does not support the video tag.
                </video>


            }
            else
