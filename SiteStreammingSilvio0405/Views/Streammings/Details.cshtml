                if (@Model.Tipo == ".webm")
                {

                    <audio class="video" controls>


                        <source class=thumbnail src="~/arq/@Model.Titulo" type="video/wav">
                        Your browser does not support the video tag.
                    </audio>


                }
                else
                {
                    if (@Model.Tipo == ".ogg")
                    {

                        <video class="video" controls>


                            <source class=thumbnail src="~/arq/@Model.Titulo" type="video/ogg">
                            Your browser does not support the video tag.
                        </video>


                    }
                    else
                    {
                        if (@Model.Tipo == ".mp3")
                        {

                            <audio class="video" controls>


                                <source class=thumbnail src="~/arq/@Model.Titulo" type="audio/mp3">
                                Your browser does not support the video tag.
                            </audio>


                        }
                        else
                        {
                            if (@Model.Tipo == ".wav")
